<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="50dp"
    android:background="@drawable/setting_item_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="15dp">

    <TextView
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:text="SJTU"
        android:gravity="bottom"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/last"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/ssid"
        android:layout_marginStart="175dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:textSize="12sp"
        android:text="2 mins ago"/>

    <TextView
        android:id="@+id/cnthead"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12sp"
        android:gravity="bottom"
        android:layout_below="@+id/ssid"
        android:layout_alignStart="@+id/ssid"
        android:text="Connection Time:"/>

    <TextView
        android:id="@+id/cnt"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_toEndOf="@+id/cnthead"
        android:layout_alignBottom="@+id/cnthead"
        android:gravity="bottom"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:text="10"/>



</RelativeLayout>